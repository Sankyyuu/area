<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.MainActivity" android:background="@color/colorAccent" tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/buttonSignupGoogle"
        android:layout_width="230dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_button"
        android:onClick="loginGoogle"
        android:text="Google"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignupGithub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972" />
    <Button
            android:text="Twitter"
            android:layout_width="230dp"
            android:id="@+id/buttonSignupTwitter"
            android:layout_height="46dp"
            android:background="@drawable/round_button" android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.472" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="loginTwitter"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonSignupGoogle"
            app:layout_constraintVertical_bias="0.94"/>

    <Button
        android:id="@+id/buttonSignupGithub"
        android:layout_width="230dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/round_button"
        android:onClick="loginGithub"
        android:text="Github"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/buttonMainSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="sign up"
            android:layout_width="230dp"
            android:id="@+id/buttonMainSignUp"
            android:layout_height="42dp"
            android:background="@drawable/round_button" android:textColor="@color/colorAccent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
            android:onClick="signUpButton" />
    <Button
            android:text="Login"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:id="@+id/buttonLogin" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.901" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/round_button" android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent" android:onClick="loginButton" />
</android.support.constraint.ConstraintLayout>